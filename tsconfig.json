{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"useDefineForClassFields": true
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
